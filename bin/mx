#!/usr/bin/env bash

# mx
# version 0.5.2

set -e

TMUX_CMD="tmux -2"
CURRENT_TMUX_SOCKET=$TMUX
TMUX= # clear out the tmux variable locally so we can create (non-nested) sessions

if [ -z "$1" ]; then
  SESSION="${PWD##*/}"
else
  SESSION="$1"
fi

SESSION="$(echo $SESSION | tr . _)"

if ! ($TMUX_CMD list-sessions | cut -d':' -f1 | grep -q ^"$SESSION"\$); then
  if [ -d "$PROJECTS"/"$SESSION" ]; then
    cd "$PROJECTS"/"$SESSION"
  fi

  if [ -x "$PWD"/.tmux ]; then
    "$PWD"/.tmux "$SESSION"
  else
    $TMUX_CMD new-session -s "$SESSION" -n editor -d
    $TMUX_CMD send-keys -t "$SESSION" "$EDITOR" C-m ':CtrlP' C-m
    $TMUX_CMD new-window -n shell -t "$SESSION"

    $TMUX_CMD select-window -t "$SESSION":1
  fi
fi

if [ -z "$CURRENT_TMUX_SOCKET" ]; then
  $TMUX_CMD attach -t "$SESSION"
else
  $TMUX_CMD switch-client -t "$SESSION"
fi
